<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#E7F4FE">

        <LinearLayout android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@android:color/white">
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:padding="10dp" android:gravity="top" android:background="@drawable/list_row">

                <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:padding="10dp" android:background="@drawable/extension_outer_curve" android:layout_marginRight="10dp">
                    <ImageView android:src="@drawable/file_extension_default" android:id="@+id/extension" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="top" />
                </LinearLayout>
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical">
                    <TextView android:text="Loading" android:id="@+id/name" style="@style/docViewFilename" android:layout_width="fill_parent" android:layout_height="wrap_content" />

                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="3dp">
                        <TextView android:text="Upload On : " style="@style/docViewData" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>

                        <TextView android:text="" android:id="@+id/uploaded" style="@style/docViewData" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textSize="12sp"></TextView>
                    </LinearLayout>
                    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="left" android:layout_marginTop="3dp">
                        <TextView android:text="Size : " android:id="@+id/textView2" style="@style/docViewData" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>

                        <TextView android:text="" android:id="@+id/size" style="@style/docViewData" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>

                        <TextView android:text=" | " style="@style/docViewData" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>

                        <TextView android:text="" android:id="@+id/type" style="@style/docViewData" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
                    </LinearLayout>
                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="3dp">
                        <TextView android:text="Path : " style="@style/docViewData" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>

                        <TextView android:text="" android:id="@+id/path" style="@style/docViewData" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
                    </LinearLayout>

                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="3dp">
                        <TextView android:text="Tags : " style="@style/docViewData" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>

                        <TextView android:text="" android:id="@+id/tags" style="@style/docViewData" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <View android:layout_width="match_parent" android:layout_height="1dp" android:background="@android:color/darker_gray" />

            <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="25dp" android:padding="10dp" android:gravity="left" android:layout_gravity="center" android:orientation="vertical" android:background="@drawable/docviewcurve">
                <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:padding="10dp" android:gravity="center_vertical">

                    <ImageView android:id="@+id/imgShare" android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:src="@drawable/shared_icon"/>
                    <TextView android:id="@+id/txtShare" android:layout_width="80dp" android:layout_height="wrap_content"
                        android:text="  Share" style="@style/docViewFilename" android:clickable="true" />

                    <ImageView android:id="@+id/viewImage" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/view_icon"
                        android:layout_marginLeft="10dp"  />
                    <TextView  android:id="@+id/viewText" android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:text="  View" style="@style/docViewFilename" android:clickable="true"  />

                </LinearLayout>

                <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:padding="10dp" android:gravity="center_vertical" android:layout_marginTop="0dp">

                    <ImageView android:id="@+id/imgTag" android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:src="@drawable/tag_icon" />
                    <TextView android:id="@+id/txtTag" android:layout_width="80dp" android:layout_height="wrap_content"
                        android:text="  Add Tag" style="@style/docViewFilename" android:clickable="true" />

                    <ImageView android:id="@+id/imgDownload" android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:src="@drawable/download_icon" android:layout_marginLeft="10dp"  />
                    <TextView android:id="@+id/txtDownload" android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:text="  Download" style="@style/docViewFilename" android:clickable="true" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

</FrameLayout>