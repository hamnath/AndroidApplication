<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="?android:attr/listPreferredItemHeight"
    android:padding="6dip" android:background="@drawable/list_row">

    <ImageView
        android:id="@+id/listImage"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginRight="6dip"
        android:src="@drawable/no_user_image" />
    <TableLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="fill_parent"
        >
        <TableRow
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="fill_parent">
            <TextView
                android:id="@+id/toptext"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:textStyle="bold"
                android:typeface="sans"
                android:layout_span="2"
                android:maxLines="1"
                />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="fill_parent">
            <LinearLayout android:layout_width="wrap_content" android:layout_height="fill_parent" android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="5pt"
                    android:typeface="sans"
                    android:text="On "
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/bottomtext"
                    android:textSize="5pt"
                    android:typeface="sans"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="5pt"
                    android:typeface="sans"
                    android:text=" | "
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/smallest_file_icon"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/filecount"
                    android:textSize="5pt"
                    android:typeface="sans"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/smallest_user_icon"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/peoplecount"
                    android:textSize="5pt"
                    android:typeface="sans"
                    />
            </LinearLayout>
        </TableRow>
    </TableLayout>
</LinearLayout>