<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:id="@+id/layout_root"
android:orientation="vertical"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
android:padding="10dp"
>
	<EditText android:id="@+id/folderbox"
	android:layout_width="200dp"
	android:layout_height="wrap_content"
	android:hint="Enter Folder Name"
	/>
	<LinearLayout android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:padding="0dp"
	>
		<Button android:layout_width="100dp" android:layout_height="wrap_content" android:text="Ok" android:tag="1" android:id="@+id/ok" />
		<Button android:layout_width="100dp" android:layout_height="wrap_content" android:text="Cancel" android:tag="2" android:id="@+id/cancel" />
	</LinearLayout>
</LinearLayout>